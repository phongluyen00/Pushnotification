<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.pushnotification.model.Product" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/rootView"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:layout_alignTop="@+id/id_sp"
            android:layout_alignBottom="@+id/id_sp"
            android:paddingBottom="6dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/id_sp"
            android:layout_alignBottom="@+id/id_sp"
            android:layout_toLeftOf="@+id/id_sp"
            android:src="@drawable/barcode_new"
            android:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:text="@{item.productId + ``}"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/img_back"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/do_trang_diem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="5dp"
            android:text="@{item.productName}"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="3dp"
            android:text="@{item.money}"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/ratingBar21"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/tv_money"
            android:scaleX=".5"
            android:scaleY=".5"
            android:rating="3"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:stepSize="0.1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_bl"
            android:layout_below="@+id/ratingBar21"
            android:layout_width="wrap_content"
            android:text="Bình luận"
            android:textSize="16sp"
            android:textColor="@color/colorDefault"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_comment"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/post_comment"
            tools:listitem="@layout/item_comment"
            android:layout_below="@id/label_bl" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/post_comment"
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/send_comment"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:hint="Nhập nội dung"
            android:paddingStart="6dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:background="@drawable/botron_button"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/send_comment"
            android:padding="3dp"
            android:layout_alignTop="@+id/post_comment"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/post_comment"
            android:src="@drawable/ic_baseline_near_me_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
</layout>