<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/title"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@id/qr_code"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="QR Code"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_back"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/botron_button"
                app:layout_constraintTop_toTopOf="@id/title"
                app:srcCompat="@drawable/ic_baseline_history_24"
                tools:ignore="VectorDrawableCompat" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/login"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/botron_button"
                android:padding="10dp"
                android:text="Đăng Nhập"
                android:layout_marginEnd="6dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/history"
                app:layout_constraintEnd_toStartOf="@id/history"
                app:layout_constraintTop_toTopOf="@+id/history" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/qr_code"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/botron_button"
                android:padding="10dp"
                android:textColor="#FF0000"
                android:layout_marginEnd="6dp"
                android:textStyle="bold"
                android:src="@drawable/scan_qr"
                app:layout_constraintBottom_toBottomOf="@+id/history"
                app:layout_constraintEnd_toStartOf="@id/login"
                app:layout_constraintTop_toTopOf="@+id/history" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/cycle"
                android:text="Cá Nhân"
                android:textColor="@color/colorDefault"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:src="@drawable/qr_scaner_new"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/home"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="home,profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>