<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.example.pushnotification.model.Product" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_close_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/img_close"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_account_circle_24" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/product_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botron_button"
                    android:enabled="false"
                    android:hint="Mã sản phẩm"
                    android:paddingStart="20dp"
                    android:text="@{item.productId +``}"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_id"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Tên sản phẩm"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_loaisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Loại sản phẩm"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_dn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Tên doanh nghiệp"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Địa chỉ"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Số điện thoại"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Email"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_mathue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Mã số thuế"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="C1"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="C2"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Gía sản phẩm"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_trongluong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Trọng lượng"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tV_mota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Mô tả"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/create_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Create by"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_create_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/botron_button"
                    android:hint="Create date"
                    android:paddingStart="20dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/submit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/botron_button"
                    android:gravity="center_horizontal"
                    android:text="Đóng góp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</layout>